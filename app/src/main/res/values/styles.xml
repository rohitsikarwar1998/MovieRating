<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="SplashTheme" parent="LoginTheme">
        <item name="android:windowBackground">@drawable/splash_screen_layout</item>
    </style>


    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored"/>

    <style name="ButtonBorder.Accent_Login">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonBorder.Accent_Logout">
        <item name="android:background">@drawable/bg_button_outline_logout</item>
        <item name="android:textColor">@color/btn_color_logout</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
